{
  "manifest_version": 2,
  "name": "downpage",
  "version": "0.1",
  "applications": {
    "gecko": {
      "id": "downpage@fiji-flo.de",
      "strict_min_version": "49.0",
      "strict_max_version": "51.*"
    }
  },
  "icons": {
    "128": "icons/icon.png"
  },
  "background": {
      "scripts": ["trigger.js"]
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Got cha!"
  }
}
